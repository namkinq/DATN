@model WebBanHang.ModelViews.ChangeInfoVM

<div class="myaccount-details">
    <form asp-controller="Accounts" asp-action="ChangeInfo" method="post" class="myaccount-form">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="myaccount-form-inner">
            <div class="single-input ">
                <label>Họ tên</label>
                <input asp-for="FullName" type="text">
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>
            <div class="single-input">
                <label>SĐT</label>
                <input disabled asp-for="Phone" type="tel">
            </div>
            <div class="single-input">
                <label>Email</label>
                <input disabled asp-for="Email" type="email">
            </div>
            <div class="single-input ">
                <label>Địa chỉ</label>
                <input asp-for="Address" type="text">
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="single-input">
                <label>
                    Mật khẩu hiện tại
                </label>
                <input asp-for="PasswordNow" type="password">
                <span asp-validation-for="PasswordNow" class="text-danger"></span>
            </div>
            <div class="single-input">
                <label>
                    Mật khẩu mới
                </label>
                <input asp-for="Password" type="password">
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="single-input">
                <label>Nhập lại mật khẩu mới</label>
                <input asp-for="ConfirmPassword" type="password">
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            
            <div class="single-input">
                <button class="btn btn-custom-size lg-size btn-secondary btn-primary-hover rounded-0" type="submit">
                    <span>Lưu</span>
                </button>
            </div>
        </div>
    </form>
</div>
