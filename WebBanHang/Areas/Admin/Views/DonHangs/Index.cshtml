@using PagedList.Core.Mvc
@model PagedList.Core.IPagedList<WebBanHang.Models.DonHang>

@{
    int CurrentPage = ViewBag.CurrentPage;
    ViewData["Title"] = "QL đơn hàng ";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-header">
    <h2 class="header-title">Quản lý đơn hàng</h2>
    <div class="header-sub-title">
        <nav class="breadcrumb breadcrumb-dash">
            <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Home</a>
            <span class="breadcrumb-item active">Danh sách đơn hàng</span>
        </nav>
    </div>
</div>
<div class="card">
    <div class="card-body">
        <div class="row m-b-30">
            <div class="col-lg-8">
                <div class="d-md-flex">
                    <div class="m-b-10 ">
                        <div class="input-affix" style="min-width: 200px;">
                            <i class="prefix-icon anticon anticon-search opacity-04"></i>
                            <input id="searchKey" name="searchKey" type="text" class="form-control" placeholder="Tìm">
                        </div>
                    </div>

                </div>
            </div>
        </div>
        <div class="table-responsive">
            <table class="table table-hover e-commerce-table">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Đơn hàng</th>
                        <th>Ngày mua</th>
                        <th>Ngày ship</th>
                        <th>Tổng tiền</th>
                        <th>Trạng thái</th>
                        <th>#</th>
                    </tr>
                </thead>
                <tbody id="records_table">
                    @if (Model != null)
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @item.MaDh
                                </td>
                                <td>
                                    @item.MaKhNavigation.TenKh
                                </td>

                                <td>@item.NgayDat</td>
                                <td>@item.NgayShip</td>
                                @{
                                    int? tong = 0; 
                                    foreach(var item2 in item.ChiTietDonHangs)
                                    {
                                        tong += item2.GiaGiam * item2.SoLuong;
                                    }
                                    <td>@tong.Value.ToString("#,##0") đ</td>
                                }
                                <td>@item.TrangThai</td>
                                <td class="text-right">
                                    <a class="btn btn-icon btn-hover btn-sm btn-rounded" asp-area="Admin" asp-controller="DonHangs" asp-action="ChangeStatus" asp-route-id="@item.MaDh">
                                        <i class="anticon anticon-edit"></i>
                                    </a>

                                </td>
                            </tr>
                        }
                    }

                </tbody>
            </table>

            <div aria-label="Page navigation example">
                <ul class="pagination">
                    <pager class="pager-container" list="@Model" asp-area="Admin" asp-controller="DonHangs" asp-action="Index" asp-route-MaLoai="@ViewBag.CurrentMaLoai" />
                </ul>
            </div>
        </div>
    </div>
</div>

