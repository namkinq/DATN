@model WebBanHang.Models.Role

@{
    ViewData["Title"] = "Chỉnh sửa quyền truy cập";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-header">
    <h2 class="header-title">Chỉnh sửa quyền truy cập</h2>
    <div class="header-sub-title">
        <nav class="breadcrumb breadcrumb-dash">
            <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Home</a>
            <a asp-area="Admin" asp-controller="AdminRoles" asp-action="Index" class="breadcrumb-item">Quyền truy cập</a>
            <span class="breadcrumb-item active">Chỉnh sửa quyền truy cập</span>
        </nav>
    </div>
</div>

<hr />
<form asp-action="Edit" asp-route-id="@Model.RoleId" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="RoleId"/>

    <div class="form-group row">
        <label class="col-sm-2 col-form-label">ID</label>
        <div class="col-sm-2">
            <input type="text" readonly class="form-control" asp-for="RoleId" placeholder="ID">
        </div>
    </div>

    <div class="form-group row">
        <label class="col-sm-2 col-form-label">Tên Role</label>
        <div class="col-sm-5">
            <input type="text" class="form-control" asp-for="RoleName" placeholder="Tên Role">
        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-2 col-form-label">Mô tả</label>
        <div class="col-sm-5">
            <input type="text" class="form-control" asp-for="Description" placeholder="Mô tả">
        </div>
    </div>

    <div class="form-group row">
        <div class="col-sm-5">
            <button type="submit" class="btn btn-primary">Lưu thay đổi</button>
        </div>
    </div>

    
</form>


