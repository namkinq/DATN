@model WebBanHang.Models.KhuyenMai

@{
    ViewData["Title"] = "Sửa";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-header">
    <h2 class="header-title">Quản lý voucher</h2>
    <div class="header-sub-title">
        <nav class="breadcrumb breadcrumb-dash">
            <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Home</a>
            <a asp-area="Admin" asp-controller="KhuyenMais" asp-action="Index" class="breadcrumb-item">Voucher</a>
            <span class="breadcrumb-item active">Sửa voucher</span>
        </nav>
    </div>
</div>

<div class="card">
    <div class="card-body">
        <h4 class="card-title">Sửa voucher</h4>
        <form asp-action="Edit" asp-route-id="@Model.MaCtkm" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="MaCtkm" />

            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Mã</label>
                <div class="col-sm-2">
                    <input style="background-color:#F7F9F9;" type="text" readonly class="form-control" asp-for="Ma" placeholder="ID">
                </div>
            </div>

            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Mô tả</label>
                <div class="col-sm-5">
                    <textarea rows="5" class="form-control" asp-for="MoTa" placeholder="Mô tả"></textarea>
                    <span asp-validation-for="MoTa" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Giá trị giảm</label>
                <div class="col-sm-3">
                    <input type="text" class="form-control" asp-for="Gtgiam" placeholder="Giá trị giảm">
                    <span asp-validation-for="Gtgiam" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Giá trị tối thiểu</label>
                <div class="col-sm-3">
                    <input type="text" class="form-control" asp-for="GttoiThieu" placeholder="Giá trị tối thiểu">
                    <span asp-validation-for="GttoiThieu" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Ngày bắt đầu</label>
                <div class="col-sm-3">
                    <input class="form-control" asp-for="NgayBd" placeholder="Ngày bắt đầu">
                    <span asp-validation-for="NgayBd" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Ngày kết thúc</label>
                <div class="col-sm-3">
                    <input class="form-control" asp-for="NgayKt" placeholder="Ngày kết thúc">
                    <span asp-validation-for="NgayKt" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-sm-5">
                    <button type="submit" class="btn btn-primary">Lưu thay đổi</button>
                </div>
            </div>
        </form>
    </div>
</div>

