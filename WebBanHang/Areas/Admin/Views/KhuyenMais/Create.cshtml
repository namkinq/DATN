@model WebBanHang.Models.KhuyenMai

@{
    ViewData["Title"] = "Tạo mới";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-header">
    <h2 class="header-title">Quản lý khuyến mại</h2>
    <div class="header-sub-title">
        <nav class="breadcrumb breadcrumb-dash">
            <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Home</a>
            <a asp-area="Admin" asp-controller="KhuyenMais" asp-action="Index" class="breadcrumb-item">Danh sách khuyến mại</a>
            <span class="breadcrumb-item active">Tạo mới khuyến mại</span>
        </nav>
    </div>
</div>

<div class="card">
    <div class="card-body">
        <h4 class="card-title">Tạo mới khuyến mại</h4>
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Mã nhập</label>
                <div class="col-sm-3">
                    <input type="text" class="form-control" asp-for="MaNhap" placeholder="Mã nhập">
                    <span asp-validation-for="MaNhap" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Mô tả</label>
                <div class="col-sm-5">
                    <textarea rows="5" class="form-control" asp-for="MoTa" placeholder="Mô tả"></textarea>
                    <span asp-validation-for="MoTa" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Số lượng</label>
                <div class="col-sm-5">
                    <input type="text" class="form-control" asp-for="SoLuong" placeholder="Số lượng">
                    <span asp-validation-for="SoLuong" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Giá trị giảm</label>
                <div class="col-sm-3">
                    <input type="text" class="form-control" asp-for="GiaTriGiam" placeholder="Giá trị giảm">
                    <span asp-validation-for="GiaTriGiam" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Giá trị tối thiểu</label>
                <div class="col-sm-3">
                    <input type="text" class="form-control" asp-for="GiaTriToiThieu" placeholder="Giá trị tối thiểu">
                    <span asp-validation-for="GiaTriToiThieu" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Ngày bắt đầu</label>
                <div class="col-sm-3">
                    <input class="form-control" asp-for="NgayBatDau" placeholder="Ngày bắt đầu">
                    <span asp-validation-for="NgayBatDau" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Ngày kết thúc</label>
                <div class="col-sm-3">
                    <input class="form-control" asp-for="NgayKetThuc" placeholder="Ngày kết thúc">
                    <span asp-validation-for="NgayKetThuc" class="text-danger"></span>
                </div>
            </div>


            <div class="form-group row">
                <div class="col-sm-5">
                    <button type="submit" class="btn btn-primary">Thêm</button>
                </div>
            </div>
        </form>
    </div>
</div>
