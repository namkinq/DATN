@using PagedList.Core.Mvc
@model PagedList.Core.IPagedList<WebBanHang.Models.KhachHang>

@{
    int CurrentPage = ViewBag.CurrentPage;
    ViewData["Title"] = "QL khách hàng " + CurrentPage;
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-header">
    <h2 class="header-title">Quản lý khách hàng</h2>
    <div class="header-sub-title">
        <nav class="breadcrumb breadcrumb-dash">
            <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Home</a>
            <span class="breadcrumb-item active">Danh sách khách hàng</span>
        </nav>
    </div>
</div>
<div class="card">
    <div class="card-body">
        <div class="row m-b-30">
            <div class="col-lg-8">
                <div class="d-md-flex">
                    <div class="m-b-10 m-r-15">
                        <select class="custom-select" style="min-width: 170px;" id="idtt" name="idtt" asp-items="ViewBag.lsBlock">
                            <option selected>-Chọn trạng thái-</option>
                            <option value="0">Tất cả</option>
                        </select>
                    </div>
                </div>
            </div>
            <div class="col-lg-4 text-right">
                <a class="btn btn-primary" asp-area="Admin" asp-controller="KhachHangs" asp-action="Create">
                    <i class="anticon anticon-plus-circle m-r-5"></i>
                    <span>Thêm mới</span>
                </a>
            </div>
        </div>
        <div class="table-responsive">
            <table class="table table-hover e-commerce-table">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Tên</th>
                        <th>Email</th>
                        <th>SĐT</th>
                        <th>Trạng thái</th>
                        <th>#</th>
                    </tr>
                </thead>
                <tbody>
                    @if(Model !=null){
                        foreach(var item in Model)
                        {
                            <tr>
                                <td>
                                    @item.MaKh
                                </td>
                                <td>
                                    @item.TenKh
                                </td>
                                <td>@item.Email</td>
                                <td>@item.Sdt</td>
                                <td>
                                    @if(item.Khoa==false){
                                        <div class="d-flex align-items-center">
                                            <div class="badge badge-success badge-dot m-r-10"></div>
                                            <div>Hoạt động</div>
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="d-flex align-items-center">
                                            <div class="badge badge-danger badge-dot m-r-10"></div>
                                            <div>Chặn</div>
                                        </div>
                                    }
                                    
                                </td>
                                <td class="text-right">
                                    <a class="btn btn-icon btn-hover btn-sm btn-rounded pull-right" asp-area="Admin" asp-controller="KhachHangs" asp-action="Delete" asp-route-id="@item.MaKh">
                                        <i class="anticon anticon-delete"></i>
                                    </a>

                                    <a class="btn btn-icon btn-hover btn-sm btn-rounded" asp-area="Admin" asp-controller="KhachHangs" asp-action="Edit" asp-route-id="@item.MaKh">
                                        <i class="anticon anticon-edit"></i>
                                    </a>
                                    
                                </td>
                            </tr>
                        }
                    }
                    
                </tbody>
            </table>
            
            <div aria-label="Page navigation example">
                <ul class="pagination">
                    <pager class="pager-container" list="@Model" asp-area="Admin" asp-controller="KhachHangs" asp-action="Index"/>
                </ul>
            </div>
        </div>
    </div>
</div>
