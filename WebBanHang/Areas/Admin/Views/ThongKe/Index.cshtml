@model List<WebBanHang.ModelViews.ThongKeVM>
@{
    ViewData["Title"] = "Thống kê";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}


<div class="page-header">
    <h2 class="header-title">Thống kê</h2>
    <div class="header-sub-title">
        <nav class="breadcrumb breadcrumb-dash">
            <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Home</a>
            <span class="breadcrumb-item active">Thống kê</span>
        </nav>
    </div>
</div>
<div class="card">
    <div class="card-body">
        <div class="row m-b-30">
            <form id="myform" asp-action="Index" method="post">

            </form>
            <label style="padding-left:30px" class=" col-form-label">Từ</label>
            <div class="col-sm-3">
                <div class="input-affix">
                    <input required form="myform" id="tuNgay" name="tuNgay" type="date" class="form-control" placeholder="Từ ngày">
                </div>
            </div>
            <div class="col-sm-3">
                <div class="input-affix">
                    <input required form="myform" id="denNgay" name="denNgay" type="date" class="form-control" placeholder="Đến ngày">
                </div>
            </div>
            <div class="col-sm-3">
                <button form="myform" type="submit" class="btn btn-primary">Thống kê</button>
            </div>
        </div>
        <div class="table-responsive">
            <table class="table table-hover e-commerce-table">
                <thead>
                    <tr>
                        <th style="font-weight:bold">Ngày</th>
                        <th style="font-weight:bold">Tổng đơn hàng</th>
                        <th style="font-weight:bold">Tổng doanh thu</th>
                    </tr>
                </thead>
                <tbody id="records_table">
                    @if (Model != null)
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.NgayDat.ToShortDateString()</td>
                                <td>@item.TongDH</td>
                                <td>@item.TongDT.ToString("##,##0") đ</td>
                            </tr>
                        }
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>

