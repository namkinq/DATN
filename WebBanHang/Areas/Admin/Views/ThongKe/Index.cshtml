@{
    ViewData["Title"] = "Thống kê";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}


<div class="page-header">
    <h2 class="header-title">Thống kê doanh số</h2>
    <div class="header-sub-title">
        <nav class="breadcrumb breadcrumb-dash">
            <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Home</a>
            <span class="breadcrumb-item active">Thống kê</span>
        </nav>
    </div>
</div>
<div class="card">
    <div class="card-body">
        <h4>Doanh số</h4>
        <div class="m-t-25">
            <div class="row">
                <div class="col-md-6 mx-auto">
                    <canvas id="salesChart"></canvas>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.4/Chart.bundle.js"></script>
    <script>
        var salesData = @Html.Raw(Json.Serialize(ViewBag.SalesData));

        var salesChart = new Chart(document.getElementById("salesChart"), {
            type: 'bar',
            data: {
                labels: salesData.map(function (data) { return data.date }),
                datasets: [{
                    label: 'Doanh số theo tháng',
                    data: salesData.map(function (data) { return data.totalSales }),
                    borderColor: 'rgb(255, 99, 132)',
                    backgroundColor: 'rgba(255, 99, 132, 0.2)',
                    fill: true,
                    borderWidth: 1
                }]
            },
            options: {
                responsive: true,
                title: {
                    display: true,
                    text: 'Doanh số'
                },
                scales: {
                    xAxes: [{
                        type: 'time',
                        time: {
                            unit: 'month'
                        }
                    }],
                    yAxes: [{
                        ticks: {
                            beginAtZero: true
                        }
                    }]
                }
            }
        });
    </script>
}
